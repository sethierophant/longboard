{{#*inline "head"}}
    <script src="/file/script/thread.js">
{{/inline}}
<section class="thread">
    <header>
        <a href="{{uri}}">
            <h1 class="subject">
                {{subject}}
            </h1>
        </a>
        {{#if pinned}}
            <span class="thread-pin">&#128204;</span>
        {{/if}}
        {{#if locked}}
            <span class="thread-lock">&#128274;</span>
        {{/if}}
    </header>
    {{#each posts}}
        {{> models/post}}
    {{/each}}
</section>
